{
	"manifest_version": 2,
	"name": "Pumpify",
	"description": "Play audio clips based on website interactions.",
	"version": "0",
	"author": "AK224",

	"icons": { 
		"16": "icons/icon16.png",
		"19": "icons/icon48.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png" },

	// "options_page": "options.html",

	"browser_action": {
		"default_icon": "icons/icon128.png",
		"default_popup": "popup.html"
	},


	"web_accessible_resources": [
		"jingle.mp3",
	],

	"content_scripts": [
		{
			"matches": ["https://stackoverflow.com/*", "https://www.ssense.com/en-ca*", "https://www.reddit.com/r/UBC*", "https://www.nhl.com/*"],
			"js": ["cont.js"]
		}
	]
}
